[Unit]
Description=Ollama Service
After=network-online.target

[Service]
ExecStart=/home/tony/bin/ollama serve
User=tony
Group=tony
Restart=always
RestartSec=3
Environment="OLLAMA_HOST=0.0.0.0"
Environment="PATH=/usr/local/cuda/bin:/home/tony/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

[Install]
WantedBy=default.target
